<?xml version="1.0"?>
<component name="org.nuxeo.labs.rating.ui.widgettypes">
    <extension
            target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
            point="widgettypes">

        <widgetType name="rating_stats">
            <configuration>
                <title>Document Rating</title>
                <description>
                    <p>
                        Document rating Widget
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                    <mode>edit</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/rating-view/rating-stats.xhtml</property>
        </widgetType>

        <widgetType name="rating_avg">
            <configuration>
                <title>Document Average Rating</title>
                <description>
                    <p>
                        Document Average Rating Widget
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/rating-view/rating-avg.xhtml</property>
        </widgetType>

        <widgetType name="rating_user">
            <configuration>
                <title>Document User Rating</title>
                <description>
                    <p>
                        Document User Rating Widget
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/rating-view/rating-user.xhtml</property>
        </widgetType>

        <widgetType name="rating_simple">
            <configuration>
                <title>Document User Rating</title>
                <description>
                    <p>
                        Document User Rating Widget
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/rating-view/rating-simple.xhtml</property>
        </widgetType>
        
        <widgetType name="rating_user_simple">
            <configuration>
                <title>Document User Rating Simple</title>
                <description>
                    <p>
                        Document User Rating Widget - Just Stars
                    </p>
                </description>
                <supportedModes>
                    <mode>view</mode>
                </supportedModes>
            </configuration>
            <handler-class>
                org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
            </handler-class>
            <property name="template">/rating-view/rating-user-simple.xhtml</property>
        </widgetType>

    </extension>


</component>
